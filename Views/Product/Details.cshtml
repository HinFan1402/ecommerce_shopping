@model ProductDetailViewModel
<div class="col-sm-3">
    <partial name="_SidebarPartial" />
</div>
<div class="col-sm-9 padding-right">

    <div class="product-details row align-items-start">

        <!-- Cột hình ảnh -->
        <div class="col-sm-6 d-flex justify-content-center">
            <div class="view-product bg-white border rounded-3 p-3 text-center w-100 d-flex align-items-center justify-content-center"
                 style="min-height: 450px;">
                <img src="~/images/@Model.Product.Image"
                     alt="@Model.Product.Name"
                     class="img-fluid"
                     style="object-fit: contain; max-width: 100%; max-height: 100%;" />
            </div>
        </div>

        <!-- Cột thông tin -->
        <div class="col-sm-6">
            <div class="product-information">

                <h2 class="fw-bold mb-3" style="font-size:26px; color:#222;">@Model.Product.Name</h2>

                <span class="d-flex align-items-center mb-3">
                    <span class="fw-bold me-4" style="color:#ff9900; font-size:26px; white-space: nowrap;">
                        @Model.Product.Price.ToString("#,##0 VND")
                    </span>

                    <label for="quantity" class="fw-semibold me-2 mb-0" style="white-space: nowrap;">Quantity:</label>

                    <input id="quantity" type="number" min="1" value="1"
                           class="form-control form-control-sm text-center me-3"
                           style="width:60px; height:31px; display:inline-block;" />

                    <button type="button"
                            class="btn btn-warning fw-semibold text-white px-4 shadow-sm"
                            style="white-space: nowrap;">
                        <i class="fa fa-shopping-cart me-2"></i>Add to cart
                    </button>
                </span>

                <p><b>Availability:</b> In Stock</p>
                <p><b>Condition:</b> New</p>
                <p><b>Brand:</b> @Model.Product.Brand?.Name</p>
                <p><b>Category:</b> @Model.Product.Category?.Name</p>
            </div>
        </div>

    </div>




