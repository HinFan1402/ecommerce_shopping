@{
    ViewData["title"] = "Compare";
    var key = 0;
}
<div class="d-flex justify-content-between align-items-center mb-1 custom-breadcrumb">
    <ol class="breadcrumb mb-0 pb-0">
        <li><a href="#" class="admin-link"><i class="fa fa-home"></i>Home</a></li>
        <li class="active">compareList</li>
    </ol>
</div>
<div class="col-sm-12">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Product Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
                <th scope="col">Manage</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var comparelist_product in Model)
            {
                key++;
                <tr>

                    <td>@key</td>
                    <td>@comparelist_product.Product.Name</td>
                    <td>@comparelist_product.Product.Description</td>
                    <td>@comparelist_product.Product.Price.ToString("#,##0 VND")</td>
                    <td><img src="~/images/@comparelist_product.Product.Image" width="120px"></img></td>
                    <td>
                        <a class="btn btn-danger btn-sm"
                           asp-action="DeleteCompareList"
                           asp-controller="Home"
                           asp-route-id="@comparelist_product.Compares.Id"
                           style="padding: 6px 12px; font-size: 14px; line-height: 1.5; border-radius: 4px; min-width: 90px; text-align:center;">
                            Delete
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

