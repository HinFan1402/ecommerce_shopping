@model IEnumerable<CategoryModel>
@{
    var controllerName = ViewContext.RouteData.Values["controller"]?.ToString();
    var pageTitle = $"{controllerName} Management";
    ViewData["Title"] = $"List {controllerName}";

    Paginate pager = new Paginate();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="container mt-4">
  

    <div class="d-flex justify-content-between align-items-center mb-1">
        <a asp-area="Admin" asp-action="Create" asp-controller="@controllerName" class="btn btn-outline-danger">
            <i class="fa fa-plus"></i> Add @controllerName
        </a>
    </div>



    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-bordered align-middle text-center" id="myTable" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th style="width:5%;">Id</th>
                        <th style="width:15%;">Category Name</th>
                        <th style="width:10%;">Slug</th>
                        <th style="width:35%;">Description</th>
                        <th style="width:10%;">Status</th>
                        <th style="width:25%;">Manage</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Slug</td>

                            <!-- ✅ Description giới hạn chiều rộng + tự cắt nếu quá dài -->
                            <td class="text-truncate text-start" style="max-width: 250px;" title="@item.Description">
                                @item.Description
                            </td>

                            <td>@item.Status</td>

                            <!-- ✅ Nút căn ngang giữa, cách nhau đều -->
                            <td>
                                <div class="d-flex justify-content-center gap-2 flex-wrap">
                                    <a class="btn btn-warning btn-sm"
                                       asp-action="Edit"
                                       asp-controller="Category"
                                       asp-route-id="@item.Id">
                                        <i class="fa fa-pencil"></i> Edit
                                    </a>
                                    <a class="btn btn-danger btn-sm confirmDeletion"
                                       asp-action="Delete"
                                       asp-controller="Category"
                                       asp-route-id="@item.Id">
                                        <i class="fa fa-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

    <div class="mt-3">
        <partial name="_PaginatePartial" model="pager" />
    </div>
</div>
