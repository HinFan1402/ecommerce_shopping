@model ContactModel
@{
    ViewData["title"] = "Edit Product";


}
<h2>Edit Contact</h2>
<div class="col-md-9">
    <form autocomplete="off" asp-action="Edit" enctype="multipart/form-data">


        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Name" class="form-control" />
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Description</label>
            <input asp-for="Description"  type="text" class="form-control " />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Map link</label>
            <textarea asp-for="Maplink" class="form-control"> </textarea>
            <span asp-validation-for="Maplink" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Address</label>
            <textarea asp-for="Address" class="form-control"> </textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Email</label>
            <textarea asp-for="Email" class="form-control"> </textarea>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Phone</label>
            <textarea asp-for="Phone" class="form-control"> </textarea>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Image</label>
            <input asp-for="logoImgUpload" class="form-control" />
            <span asp-validation-for="logoImgUpload" class="text-danger"></span>
            <img id="imgpreview"  src="~/images/@Model.logoImgUpload" width="120px"></img>
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Update</button>
        </div>


    </form>
    <a asp-action="Index">Return</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $("#logoImgUpload").change(function () {
            readURL(this);
        });
    </script>
}
