@model ProductModel
@{
    ViewData["title"] = "Create Product";
}
<h2>Create Product</h2>
<div class="col-9">
    <form asp-action="Create" encypt="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <lable>Name</lable>
            <input asp-for="Name" class="form-control"></input>
            <span asp-validation-for="Name" class="text-danger" />
        </div>
        <div class="form-group">
            <lable>Price</lable>
            <input asp-for="Price" class="form-control" type="number"></input>
            <span asp-validation-for="Price" class="text-danger" />
        </div>
        <div class="form-group">
            <lable>Descriptions</lable>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger" />
        </div>
        <div class="form-group">
            <lable>Category</lable>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                <option>--Choose a category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger" />
        </div>
        <div class="form-group">
            <lable>Brand</lable>
            <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
                <option>--Choose a brand</option>
            </select>
            <span asp-validation-for="BrandId" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Image</label>
            <input asp-for="ImageUpload" class="form-control" />
            <span asp-validation-for="ImageUpload" class="text-danger"></span>
            <img id="imgpreview" class="pt-2" />
        </div>
        <button class=" btn btn-success"> Add</button>

    </form>
    <a asp-action="Index">Back to List Product</a>
</div>


@section Scripts{
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace( 'Description' );
    </script>
}
