@{
    ViewData["title"] = "List User";

}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-1">
        <a asp-area="Admin" asp-action="Create" asp-controller="User" class="btn btn-outline-danger">
            <i class="fa fa-plus"></i> Add User
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-bordered align-middle text-center" id="myTable" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th style="width:15%;">Id</th>
                        <th style="width:15%;">User Name</th>
                        <th style="width:20%;">Email</th>
                        <th style="width:25%;">Password</th>
                        <th style="width:10%;">Role</th>
                        <th style="width:15%;">Manage</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usersWithRoles in Model)
                    {
                        <tr>
                            <td class="text-break" style="max-width: 150px;">@usersWithRoles.User.Id</td>
                            <td>@usersWithRoles.User.UserName</td>
                            <td>@usersWithRoles.User.Email</td>
                            <td class="text-truncate text-start" style="max-width: 200px;" title="@usersWithRoles.User.PasswordHash">
                                @usersWithRoles.User.PasswordHash.Substring(0, 15)...
                            </td>
                            <td>@usersWithRoles.RoleName</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2 flex-wrap">
                                    @if (usersWithRoles.User.Id != ViewData["loggedInUserId"])
                                    {
                                        @if (usersWithRoles.RoleName != "Admin")
                                        {
                                            <a class="btn btn-warning btn-sm"
                                               asp-action="Edit" asp-controller="User"
                                               asp-route-id="@usersWithRoles.User.Id">
                                                <i class="fa fa-pencil"></i> Edit
                                            </a>
                                            <a class="btn btn-danger btn-sm confirmDeletion"
                                               asp-action="Delete" asp-controller="User"
                                               asp-route-id="@usersWithRoles.User.Id">
                                                <i class="fa fa-trash"></i> Delete
                                            </a>
                                        }
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
