@using Microsoft.AspNetCore.Identity
@using ecommerce_shopping.Models.ViewModels
@model TPaginateViewModel<IdentityRole>

@{
    ViewData["Title"] = "Role Management";

    Paginate pager = new Paginate();
    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-1">
        <a asp-area="Admin" asp-action="Create" asp-controller="Role" class="btn btn-outline-danger">
            <i class="fa fa-plus"></i> Add Role
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-bordered align-middle text-center" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th style="width:10%;">Id</th>
                        <th style="width:30%;">Role Name</th>
                        <th style="width:30%;">Normalized Name</th>
                        <th style="width:30%;">Manage</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.NormalizedName</td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2 flex-wrap">
                                        <a class="btn btn-warning btn-sm rounded-pill"
                                           asp-action="Edit"
                                           asp-controller="Role"
                                           asp-route-id="@item.Id">
                                            <i class="fa fa-pencil"></i> Edit
                                        </a>
                                        <a class="btn btn-danger btn-sm rounded-pill confirmDeletion"
                                           asp-action="Delete"
                                           asp-controller="Role"
                                           asp-route-id="@item.Id">
                                            <i class="fa fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-3">No roles found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <partial name="_PaginatePartial" model="Model.Pager" />
    </div>
</div>
