@model IEnumerable<OrderModel>
@{
    ViewData["title"] = "Order Listed";
}
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Order Code</th>
            <th scope="col">UserName</th>
            <th scope="col">OrderDate</th>
            <th scope="col">Status</th>
            <th scope="col">Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td scope="row">@item.Id</td>
                <td scope="row">@item.OrderCode</td>
                <td>@item.UserName</td>
                <td>@item.CreateDate</td>
                <td>
                @if(item.status == 1)
                {
                    <span class="text text-success">Đơn hàng đã duyệt</span>

                }
                else
                {
                    <span class="text text-danger">Đơn hàng chưa duyệt</span>
                }
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="View" asp-controller="Order" asp-route-ordercode="@item.OrderCode">View</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Order" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>