@using ecommerce_shopping.Models.ViewModels
@model TPaginateViewModel<OrderModel>

@{
    ViewData["Title"] = "Order Management";

}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-1">
        <h3 class="fw-semibold text-dark mb-0">Order List</h3>
    </div>

    <!-- Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-bordered align-middle text-center" style="width:100%" id="myTable">
                <thead class="table-light">
                    <tr>
                        <th style="width:5%;">#</th>
                        <th style="width:20%;">Order Code</th>
                        <th style="width:20%;">User Name</th>
                        <th style="width:20%;">Order Date</th>
                        <th style="width:15%;">Status</th>
                        <th style="width:20%;">Manage</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.OrderCode</td>
                                <td>@item.UserName</td>
                                <td>@item.CreateDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                                <td>
                                    @if (item.status == 1)
                                    {
                                        <span class="text-success fw-semibold">Đã duyệt</span>
                                    }
                                    else
                                    {
                                        <div class="d-flex justify-content-center align-items-center gap-2 flex-wrap">
                                            <span class="text-danger">Đơn hàng mới</span>
                                            <button class="btn btn-warning btn-sm rounded-pill select-update-order"
                                                    data-order-code="@item.OrderCode">
                                                Duyệt
                                            </button>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2 flex-wrap">
                                        <a class="btn btn-warning btn-sm rounded-pill"
                                           asp-action="View"
                                           asp-controller="Order"
                                           asp-route-ordercode="@item.OrderCode">
                                            View
                                        </a>
                                        <a class="btn btn-danger btn-sm rounded-pill confirmDeletion"
                                           asp-action="Delete"
                                           asp-controller="Order"
                                           asp-route-id="@item.Id">
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-3">No orders found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <partial name="_PaginatePartial" model="Model.Pager" />
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.select-update-order').click(function () {
                var orderCode = $(this).data("order-code");
                var button = $(this);
                button.prop('disabled', true).text('Đang xử lý...');

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateOrder", "Order")",
                    data: { ordercode: orderCode },
                    success: function (result) {
                        if (result.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Thành công!',
                                text: 'Duyệt đơn hàng thành công!',
                                showConfirmButton: false,
                                timer: 1500
                            }).then(() => location.reload());
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Lỗi!',
                                text: result.message || 'Có lỗi xảy ra!'
                            });
                            button.prop('disabled', false).text('Duyệt');
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi!',
                            text: 'Không thể kết nối đến server!'
                        });
                        button.prop('disabled', false).text('Duyệt');
                    }
                });
            });
        });
    </script>
}
