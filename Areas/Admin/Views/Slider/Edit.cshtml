@model SliderModel
@{
    ViewData["title"] = "Create Slider";
}
<h2>Create Slider</h2>
<div class="col-md-9">
    <form autocomplete="off" asp-action="Create" enctype="multipart/form-data">


        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" class="form-control" type="hidden" />
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control"> </textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Status</label>
            <select asp-for="Status" class="form-control" ">
                <option value="0">Ẩn</option>
                <option value="1">Hiển thị</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Image</label>
            <input asp-for="ImageUpload" class="form-control" />
            <span asp-validation-for="ImageUpload" class="text-danger"></span>
            <img id="imgpreview" class=" pt-2" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Create</button>
        </div>


    </form>
    <a asp-action="Index">Back to list Slider</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $("#ImageUpload").change(function(){
            readURL(this);
        })
    </script>
}
