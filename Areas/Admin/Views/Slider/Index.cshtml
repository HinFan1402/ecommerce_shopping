@using ecommerce_shopping.Models.ViewModels
@model TPaginateViewModel<SliderModel>

@{
    ViewData["Title"] = "Slider Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-1">
        <a asp-area="Admin"
           asp-action="Create"
           asp-controller="Slider"
           class="btn btn-outline-danger">
            <i class="fa fa-plus"></i> Add Slider
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-bordered align-middle text-center" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th>Id</th>
                        <th>Slider Name</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Status</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>
                                    <img src="~/images/@item.Image" alt="@item.Name"
                                         style="width:120px; height:70px; object-fit:cover; border-radius:8px;" />
                                </td>
                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <div class="d-flex align-items-center justify-content-center gap-2">
                                            <span class="badge bg-success">Hiển thị</span>
                                            <button class="btn btn-sm btn-warning rounded-pill select-update-status"
                                                    data-slider-id="@item.Id">
                                                Ẩn
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center justify-content-center gap-2">
                                            <span class="badge bg-danger">Ẩn</span>
                                            <button class="btn btn-sm btn-warning rounded-pill select-update-status"
                                                    data-slider-id="@item.Id">
                                                Hiện
                                            </button>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2 flex-wrap">
                                        <a class="btn btn-warning btn-sm rounded-pill"
                                           asp-action="Edit"
                                           asp-controller="Slider"
                                           asp-route-id="@item.Id">
                                            <i class="fa fa-pencil"></i> Edit
                                        </a>
                                        <a class="btn btn-danger btn-sm rounded-pill"
                                           asp-action="Delete"
                                           asp-controller="Slider"
                                           asp-route-id="@item.Id">
                                            <i class="fa fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-3">No sliders found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <partial name="_PaginatePartial" model="Model.Pager" />
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.select-update-status').click(function () {
                var id = $(this).data("slider-id");
                var button = $(this);

                button.prop('disabled', true).text('Đang xử lý...');

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateStatus", "Slider")",
                    data: { id: id },
                    success: function (result) {
                        if (result.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Thành công!',
                                text: 'Cập nhật trạng thái thành công!',
                                showConfirmButton: false,
                                timer: 1500
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Lỗi!',
                                text: result.message || 'Có lỗi xảy ra!'
                            });
                            button.prop('disabled', false).text('Thử lại');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Error:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi!',
                            text: 'Không thể kết nối đến server!'
                        });
                        button.prop('disabled', false).text('Thử lại');
                    }
                });
            });
        });
    </script>
}
