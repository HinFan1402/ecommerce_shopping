@section Scripts {
    <!-- Raphael JS (required by Morris) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.3.0/raphael.min.js"></script>
    <!-- Morris JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>

    <script>
        var currentFilter = 'day';
        var morrisChart;

        $(document).ready(function () {
            // Khởi tạo biểu đồ
            initChart(@Html.Raw(Json.Serialize(Model.SalesChart)));

            // Xử lý click filter buttons
            $('.btn-filter').on('click', function () {
                $('.btn-filter').removeClass('active');
                $(this).addClass('active');

                currentFilter = $(this).data('filter');

                if (currentFilter === 'custom') {
                    $('.date-range-inputs').addClass('active');
                } else {
                    $('.date-range-inputs').removeClass('active');
                    loadDashboardData(currentFilter);
                }
            });

            // Xử lý thay đổi date range
            $('#fromDate, #toDate').on('change', function () {
                if (currentFilter === 'custom') {
                    var fromDate = $('#fromDate').val();
                    var toDate = $('#toDate').val();

                    if (fromDate && toDate) {
                        loadDashboardData('custom', fromDate, toDate);
                    }
                }
            });
        });

        function initChart(data) {
            if (morrisChart) {
                morrisChart.setData(data);
                return;
            }

            morrisChart = Morris.Bar({
                element: 'salesChart',
                data: data,
                xkey: 'label',
                ykeys: ['revenue', 'profit', 'quantity'],
                labels: ['Doanh Thu (đ)', 'Lợi Nhuận (đ)', 'Số Lượng'],
                barColors: ['#f4b400', '#286090', '#5cb85c'],
                hideHover: 'auto',
                resize: true,
                gridTextSize: 12,
                barSizeRatio: 0.6,
                xLabelAngle: 45,
                parseTime: false,
                hoverCallback: function (index, options, content, row) {
                    return '<div style="padding: 10px;">' +
                           '<strong>' + row.label + '</strong><br>' +
                           'Doanh thu: <strong>' + formatMoney(row.revenue) + ' đ</strong><br>' +
                           'Lợi nhuận: <strong>' + formatMoney(row.profit) + ' đ</strong><br>' +
                           'Số lượng: <strong>' + row.quantity + '</strong>' +
                           '</div>';
                }
            });
        }

        function loadDashboardData(filterType, fromDate, toDate) {
            $('#loadingOverlay').addClass('active');

            var url = '@Url.Action("GetChartData", "Dashboard")';
            var params = { filterType: filterType };

            if (fromDate && toDate) {
                params.fromDate = fromDate;
                params.toDate = toDate;
            }

            $.ajax({
                url: url,
                type: 'GET',
                data: params,
                success: function (response) {
                    if (response.success) {
                        // Cập nhật biểu đồ
                        morrisChart.setData(response.data);

                        // Cập nhật số liệu
                        updateStatistics(response.summary);
                        updateCategoryTable(response.categoryStats);
                        updateProductTable(response.productStats);
                        updateTopProducts(response.topProducts);
                    }
                },
                error: function () {
                    alert('Có lỗi xảy ra khi tải dữ liệu!');
                },
                complete: function () {
                    $('#loadingOverlay').removeClass('active');
                }
            });
        }

        function updateStatistics(summary) {
            $('#totalOrders').text(summary.totalOrders);
            $('#newOrders').text(summary.newOrders);
            $('#approvedOrders').text(summary.approvedOrders);
            $('#deliveredOrders').text(summary.deliveredOrders);
            $('#totalRevenue').text(formatMoney(summary.totalRevenue) + ' đ');
            $('#totalProfit').text(formatMoney(summary.totalProfit) + ' đ');
            $('#totalProductsSold').text(summary.totalProductsSold);
        }

        function updateCategoryTable(categories) {
            var tbody = $('#categoryStatsTable tbody');
            tbody.empty();

            var totalProducts = 0;
            var totalSold = 0;
            var totalRevenue = 0;
            var totalProfit = 0;

            $.each(categories, function (index, cat) {
                totalProducts += cat.totalProducts;
                totalSold += cat.quantitySold;
                totalRevenue += cat.revenue;
                totalProfit += cat.profit;

                var row = '<tr>' +
                    '<td><strong>' + cat.categoryName + '</strong></td>' +
                    '<td class="text-center">' + cat.totalProducts + '</td>' +
                    '<td class="text-center"><span class="badge badge-primary">' + cat.quantitySold + '</span></td>' +
                    '<td class="text-right"><strong>' + formatMoney(cat.revenue) + ' đ</strong></td>' +
                    '<td class="text-right"><span class="text-success"><strong>' + formatMoney(cat.profit) + ' đ</strong></span></td>' +
                    '</tr>';
                tbody.append(row);
            });

            // Thêm dòng tổng
            var footerRow = '<tr style="background-color: #f9f9f9; font-weight: bold;">' +
                '<td>TỔNG CỘNG</td>' +
                '<td class="text-center">' + totalProducts + '</td>' +
                '<td class="text-center"><span class="badge badge-primary">' + totalSold + '</span></td>' +
                '<td class="text-right"><strong>' + formatMoney(totalRevenue) + ' đ</strong></td>' +
                '<td class="text-right"><span class="text-success"><strong>' + formatMoney(totalProfit) + ' đ</strong></span></td>' +
                '</tr>';

            $('#categoryStatsTable tfoot').html(footerRow);
        }

        function updateProductTable(products) {
            var tbody = $('#productStatsTable tbody');
            tbody.empty();

            $.each(products.slice(0, 10), function (index, product) {
                var row = '<tr>' +
                    '<td>' +
                    '<strong>' + product.productName + '</strong><br>' +
                    '<small class="text-muted">' + product.categoryName + ' - ' + product.brandName + '</small>' +
                    '</td>' +
                    '<td class="text-center"><span class="badge badge-warning">' + product.quantitySold + '</span></td>' +
                    '<td class="text-right"><strong>' + formatMoney(product.revenue) + ' đ</strong></td>' +
                    '<td class="text-right"><span class="text-success"><strong>' + formatMoney(product.profit) + ' đ</strong></span></td>' +
                    '</tr>';
                tbody.append(row);
            });
        }

        function updateTopProducts(products) {
            var container = $('.top-product-item').parent().parent();
            container.empty();

            $.each(products, function (index, product) {
                var html = '<div class="col-md-6">' +
                    '<div class="top-product-item">' +
                    '<img src="/media/products/' + product.productImage + '" alt="' + product.productName + '" onerror="this.src=\'/media/products/noimage.jpg\'">' +
                    '<div class="top-product-info">' +
                    '<h5>' + product.productName + '</h5>' +
                    '<div>' +
                    '<span class="badge badge-primary">Đã bán: ' + product.quantitySold + '</span>' +
                    '<span class="badge badge-success">Doanh thu: ' + formatMoney(product.revenue) + ' đ</span>' +
                    '</div>' +
                    '<div style="margin-top: 5px;">' +
                    '<span class="badge badge-warning">Lợi nhuận: ' + formatMoney(product.profit) + ' đ</span>' +
