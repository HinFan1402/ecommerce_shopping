                            <td class="text-center"><span class="badge badge-primary">@Model.CategoryStatistics.Sum(c => c.QuantitySold)</span></td>
                            <td class="text-right"><strong>@Model.CategoryStatistics.Sum(c => c.Revenue).ToString("N0") đ</strong></td>
                            <td class="text-right"><span class="text-success"><strong>@Model.CategoryStatistics.Sum(c => c.Profit).ToString("N0") đ</strong></span></td>
